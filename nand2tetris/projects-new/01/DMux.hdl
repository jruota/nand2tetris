/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
    // Put your code here:
    // [a] (NOT(sel) AND in)
    Nand (a=sel, b=sel, out=notsel); // negates sel
    Nand (a=notsel, b=in, out=aout);
    Nand (a=aout, b=aout, out=a);

    // [b] (sel AND in)
    Nand (a=sel, b=in, out=bout);
    Nand (a=bout, b=bout, out=b);
}
